<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/yellow_dark"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/lime_700_a"
            android:textSize="11sp"
            android:gravity="center"
            tools:text="Trailer panjang lebar" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="6dp"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="Trailer Of Legend of Legaia" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_is_selected"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/green_500"
        android:visibility="gone"
        app:shapeAppearanceOverlay="@style/ImageRoundFull"
        tools:visibility="visible" />
</androidx.cardview.widget.CardView>
